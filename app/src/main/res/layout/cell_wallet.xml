<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:id="@+id/CvWallet"
    android:layout_height="60dp"
    app:cardBackgroundColor="@color/accentColorCreative"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TvWalletTitle"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card"
            android:textColor="@color/walletTitleText"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/TvWalletAmount"
            android:layout_marginTop="-8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000$"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@id/TvWalletTitle"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>